      }

      .appointment {
        background-color: #fee252;
        padding: 20px;
        border-radius: 10px;
        width: 80%;
        margin: 0 auto;
      }

      form {
        font-family: Arial, sans-serif;
      }

      label {
        font-weight: bold;
        color: #333;
      }

      input[type="date"],
      input[type="text"],
      input[type="number"],
      textarea {
        width: 100%;
        padding: 10px;
        margin-bottom: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #f1ef99;
      }

      input[type="radio"] {
        margin-right: 5px;
        background-color: #f1ef99;
      }

      input[type="submit"] {
        background-color: #f1ef99;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
      }

      input[type="submit"]:hover {
        background-color: #45a049;
      }

      textarea {
        resize: none;
        background-color: #f1ef99;
      }

      datalist {
        margin-bottom: 10px;
        background-color: #f1ef99;
      }

      form p {
        font-weight: bold;
        color: #333;
        margin-top: 10px;
      }
      section {
        background-color: #43ccb8;
      }
      .box {
        border: 2px sol;
        box-shadow: #111;
      }
      .doctors h1,
      h2 {
        color: white;
        text-shadow: 2px 2px #111;
      }
      .lead {
        font-weight: 600;
      }
    </style>
